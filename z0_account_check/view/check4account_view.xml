<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="wizard_check4account_view" model="ir.ui.view">
            <field name="name">Launch check</field>
            <field name="model">wizard.account.check</field>
            <field name="arch" type="xml">
                <form string="Start check" version="7.0">
					<field invisible="1" name="state" />
					<group states="step1">
						<h3><label colspan="4" string="Press [Check] to start check"/></h3>
					</group>
					<group states="step2">
          				<field name="log1" readonly="1" />   
          			</group>
					<footer states="step1">
						<button string="Cancel" special="cancel"/>
            			<button name="account_check" string="Check" type="object" />
          			</footer>
          			<footer states="step2">
						<button string="Exit" special="cancel"/>
          			</footer>
				</form>
            </field>
        </record>
        
      	<record id="wizard_account_check_action" model="ir.actions.act_window">
            <field name="name">Check</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.account.check</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="wizard_check4account_view"/>
        </record>

        <menuitem id="menu_check4account_wizard"
        		  action="wizard_account_check_action"
                  parent="base.next_id_4"/>    
    </data>
</openerp>
