<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <!-- Invoice replacement -->
    <!-- With Odoo 8.0 replace webkit by qweb-pdf and report.mako by repot.xml -->
    <report id="invoice_wht"
            name="invoice_wht"
            file="zi_invoice_wht/report/account.report_invoice_wht.mako"
            model="account.invoice"
            auto="False"
            string="Invoices"
            report_type="webkit"
            header="False"
            webkit_header="zi_small_header"
            attachment_use="False"
            attachment="(object.state in ('open','paid')) and ('INV'+(object.number or '').replace('/','')+'.pdf')"/>
  </data>
</openerp>
