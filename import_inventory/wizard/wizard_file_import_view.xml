<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="wizard_import_inventory">
        <field name="name">Import Inventory</field>
        <field name="model">wizard.import.inventory</field>
        <field name="arch" type="xml">
            <form string="Import Inventory from file Excel" >
                <group>
                        <field name="data_file" filename="filename"
                               placeholder="Choose a file to import..."/>
                        <field name="filename" invisible="1"/>
                </group>
                <group>
                        <field name="name"/>
                        <field name="location_id"/>
                </group>
                <footer>
                    <button string="Import" name="import_xls"
                            type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="wizard_import_inventory_result">
        <field name="name">Import Inventory</field>
        <field name="model">wizard.import.inventory</field>
        <field name="arch" type="xml">
            <form string="Result of Inventory" >
                <group>
                        <field name="tracelog" readonly = "1"/>
                </group>
                <footer>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="action_import_inventory"
        key2="client_action_multi"
        name="Import Inventory"
        res_model="wizard.import.inventory"
        view_mode="form"
        target="new"
    />

    <menuitem id="menu_inventory_import"
              name="Import Inventory"
              action="action_import_inventory"
              parent="base.next_id_9"
              sequence="80"
              />

</odoo>
