<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="external_layout">
    <!-- Multicompany -->
    <t t-if="not o and doc">
        <t t-set="o" t-value="doc"/>
    </t>
    <t t-if="o and 'company_id' in o">
        <t t-set="company" t-value="o.company_id"></t>
    </t>
    <t t-if="not o or not 'company_id' in o">
        <t t-set="company" t-value="res_company"></t>
    </t>
    <t t-set="company_partner" t-value="company.partner_id"></t>
    <t t-call="refocus_report.external_layout_header" />
    <t t-raw="0" />
    <t t-call="refocus_report.external_layout_footer" />
</template>

<template id="external_layout_header">
    <div class="header">
        <div class="row col-xs-3">
            <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 130px;"/>
        </div>
    </div>
</template>

<template id="external_layout_footer">
    <div class="footer" style="border-top: 1px solid black;">
        <table style="width:100%; padding: 25px; border-spacing: 0px;">
            <tr>
                <td colspan="3" class="text-center normal_plus"><i class="fa fa fa-home"/> <strong><span t-field="company.partner_id.name"/></strong></td>
            </tr>
            <tr>
                <td><i class="fa fa-map-marker"/> <span t-field="company.street"/></td>
                <td t-if="company.website"><i class="fa fa-globe"/> <span t-field="company.website"/></td>
                <td>Fiscalcode - TIN: <span t-field="company.partner_id.vat"/></td>
            </tr>
            <tr>
                <td><span t-field="company.partner_id.zip"/> <span t-field="company.partner_id.city"/> (<span t-field="company.partner_id.state_id.code"/>)</td>
                <td class="small">Company registry: <span t-field="company_partner.rea_office"/>-<span t-field="company_partner.rea_code"/></td>
                <td class="small"><span t-field="company.company_registry"/></td>
            </tr>
            <tr>
                <td class="small"><span t-field="company.country_id"/></td>
                <td class="small">Cap. Sociale: <span t-field="company_partner.rea_capital" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/></td>
                <td class="small"><span t-field="company.rml_header1"/></td>
            </tr>
            <tr>
                <td><i class="fa fa fa-envelope-square"/> <span t-field="company_partner.pec_mail"/></td>
                <td><i class="fa fa-envelope"/> <span t-field="company.partner_id.email"/></td>
                <td>
                    <span>
                        <ul class="list-inline">
                            <li>Pag.:</li>
                            <li><span class="page"/></li>
                            <li>/</li>
                            <li><span class="topage"/></li>
                        </ul>
                    </span>
                </td>
            </tr>
        </table>
    </div>
</template>

</odoo>

