<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="wizard_configure_view" model="ir.ui.view">
        <field name="name">Account Configuration Tutor</field>
        <field name="model">tutor.configure.wizard</field>
        <field name="arch" type="xml">
            <form string="Account Configuration Tutor">
                <group>
                    <field name="account_profile"/>
                </group>
                <footer>
                    <button name="account_wizard" string="Create"
                            type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="result_wizard_configure_view" model="ir.ui.view">
        <field name="name">Account Configuration Tutor</field>
        <field name="model">tutor.configure.wizard</field>
        <field name="arch" type="xml">
            <form string="Account Configuration Tutor Result">
                <group>
                    <field name="tracelog" readonly="1"/>
                </group>
                <footer>
                    <button name="close_window" string="Close"
                            type="object" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
