<openerp>
    <data>

        <record id="view_account_invoice_reportname_tree" model="ir.ui.view">
            <field name="name">account.invoice.reportname.tree</field>
            <field name="model">account.invoice.reportname</field>
            <field name="arch" type="xml">
                <tree string="Invoice report selection rules" version="7.0">
                    <field name="active"/>
                    <field name="priority"/>
                    <field name="name"/>
                    <field name="reportname"/>
                    <field name="action"/>
                    <field name="purpose"/>
                </tree>
            </field>
        </record>

        <record id="view_account_invoice_reportname_form" model="ir.ui.view">
            <field name="name">account.invoice.reportname.form</field>
            <field name="model">account.invoice.reportname</field>
            <field name="arch" type="xml">
                <form string="Invoice report selection rules" version="7.0">
                    <group name="main">
                        <group string="Technical values">
                            <field name="name"/>
                            <field name="reportname"/>
                        </group>
                        <group string="Selection criteria">
                            <field name="active"/>
                            <field name="priority"/>
                            <field name="journal_id"/>
                            <field name="partner_id"/>
                            <field name="position_id"/>
                            <field name="lang"/>
                            <field name="since_date"/>
                            <field name="until_date"/>
                        </group>
                        <group string="User configuration values">
                            <field name="purpose"/>
                            <field name="action"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_account_invoice_reportname" model="ir.actions.act_window">
            <field name="name">Invoice report selection rules</field>
            <field name="res_model">account.invoice.reportname</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_account_invoice_reportname"
            action="action_account_invoice_reportname"
            parent="account.menu_configuration_misc" />

    </data>
</openerp>
